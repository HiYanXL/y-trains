<b:beans xmlns:b="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://com.yxl/schema"
         xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
         http://com.yxl/schema
         http://com.yxl/schema/y-1.0.xsd">

    <styles id="fieldStylesBean">
        <style name="PrdNameStyle">
            <check pattern="hello">^.{1,32}$</check>
        </style>
        <style name="PrdCodeStyle">
            <check pattern="no">^[A-Z]{3}[0-9]{6}$</check>
        </style>
    </styles>
    <b:bean id="fieldStylesBean" class="com.yxl.trains.trains.config.FieldStylesBean"></b:bean>
</b:beans>
